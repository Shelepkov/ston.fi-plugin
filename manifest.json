{
  "manifest_version": 3,
  "name": "Ston.fi helper",
  "version": "1.0",
  "description": "Add CoinStats widget to pool pages on ston.fi",
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.ston.fi/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.ston.fi/*"],
      "js": ["content.js"]
    }
  ]
}
